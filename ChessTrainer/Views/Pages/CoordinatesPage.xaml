<Page x:Class="ChessTrainer.Views.CoordinatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessTrainer.Views"
      xmlns:vm="clr-namespace:ChessTrainer.ViewModels"
      mc:Ignorable="d" 
      MinHeight="620" MinWidth="900"
      Title="CoordinatesPage">
    <Page.DataContext>
        <vm:CoordinatesViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\Dictionaries\CoordinatesDictionary.xaml"/> 

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="OrangeRed" MinHeight="620" MinWidth="900">
        
        <!--Шахматная доска и координаты-->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="405"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="405"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!--Шахматная доска-->

            <ListBox Grid.Row="0" Grid.Column="1"
                     x:Name="ListBoxChessBoard"
                     ItemsSource="{Binding Board.Cells}"
                     Style="{StaticResource ListBoxChessBoardStyle}">
            </ListBox>
            
            <!--Шахматная доска-->
            
        </Grid>
        <!--Шахматная доска и координаты-->
        
    </Grid>
</Page>
